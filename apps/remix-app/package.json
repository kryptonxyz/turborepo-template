{
  "private": true,
  "name": "remix-app",
  "description": "Remix app powered by Turborepo",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "cross-env NODE_ENV=development npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "generate:css": "tailwindcss -w -i ./app/styles/tailwind.css -o ./app/styles/tailwind.min.css",
    "docker": "docker-compose up -d",
    "format": "prettier --write .",
    "test": "vitest",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "tsc",
    "validate": "run-p \"test -- --run\" lint typecheck",
    "setup": "prisma migrate dev && prisma generate && prisma db seed"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "@remix-run/node": "^1.4.3",
    "@remix-run/react": "^1.4.3",
    "@remix-run/vercel": "^1.4.3",
    "@vercel/node": "^1.15.2",
    "bcryptjs": "^2.4.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@heroicons/react": "^1.0.6",
    "@remix-run/dev": "^1.4.3",
    "@remix-run/eslint-config": "^1.4.3",
    "@remix-run/serve": "^1.4.3",
    "@tailwindcss/forms": "^0.5.1",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^14.2.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/eslint": "^8.4.2",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "@types/testing-library__jest-dom": "^5.14.3",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.7",
    "config": "workspace:*",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "eslint": "^8.15.0",
    "eslint-config-custom": "workspace:*",
    "happy-dom": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.13",
    "prisma": "^3.14.0",
    "tailwindcss": "^3.0.24",
    "ts-node": "^10.7.0",
    "tsconfig": "workspace:*",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4",
    "vite": "^2.9.9",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "^0.8.2"
  }
}
